---
import NextJsIcon from "./icons/NextJs.astro";
import TailwindIcon from "./icons/Tailwind.astro";
import ReactIcon from "./icons/React.astro";
import SpringIcon from "./icons/Spring.astro";
import JavaIcon from "./icons/Java.astro";
import Project from "./Project.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJsIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: ReactIcon,
  },
  SPRING: {
    name: "Spring",
    class: "bg-black text-white",
    icon: SpringIcon,
  },
  JAVA: {
    name: "Java",
    class: "bg-black text-white",
    icon: JavaIcon,
  },
};

const PROJECTS = [
  {
    title: "Todo List",
    description: "Um projeto de lista de tarefas feito com React e LocalStorage.",
    image: "https://user-images.githubusercontent.com/69471715/221437246-0bce4444-785a-406c-8341-8214bb94d948.png",
    link: "https://melodic-dango-f694ad.netlify.app/",
    github: "https://github.com/Sans-arch/desafio-01-praticando-conceitos-reactjs",
    tags: [TAGS.REACT],
  },
  {
    title: "URL Shortener",
    description: "Um projeto de um encurtador de links feito com Spring Boot.",
    image:
      "https://private-user-images.githubusercontent.com/69471715/332595540-8447b71d-3939-40fc-aca1-45987879d72b.png?jwt=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..222mn_qOnz2cIh5Q1j47U5l9Kq4WldtRxNeWQ-9A1VI",
    github: "https://github.com/Sans-arch/url-shortener",
    tags: [TAGS.JAVA, TAGS.SPRING],
  },
];
---

<div class="flex flex-col gap-10">
  {
    PROJECTS.map(({ title, description, tags, image, link, github }) => (
      <Project data={{ title, description, tags, image, link, github }} />
    ))
  }
</div>
