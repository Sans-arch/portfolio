---
import NextJsIcon from "./icons/NextJs.astro";
import TailwindIcon from "./icons/Tailwind.astro";
import ReactIcon from "./icons/React.astro";
import Project from "./Project.astro";

import projectsData from "../../projects.json";

console.log(projectsData);

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJsIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindIcon,
  },
  REACT: {
    name: "React",
    class: "bg-black text-white",
    icon: ReactIcon,
  },
};

const PROJECTS = [
  {
    title: "Todo List",
    description: "Um projeto de lista de tarefas feito com React e LocalStorage.",
    image: "https://user-images.githubusercontent.com/69471715/221437246-0bce4444-785a-406c-8341-8214bb94d948.png",
    link: "#",
    github: "https://github.com/Sans-arch/desafio-01-praticando-conceitos-reactjs",
    tags: [TAGS.REACT],
  },
];
---

{
  PROJECTS.map(({ title, description, tags, image, link, github }) => (
    <Project data={{ title, description, tags, image, link, github }} />
  ))
}
